doctype html

html
    head
        title= "Profile"
        link(rel='stylesheet', href='/stylesheets/profile.css')
        link(rel='stylesheet', href='/stylesheets/header.css')
        link(href="https://fonts.googleapis.com/css?family=PT+Serif|Poppins|Ubuntu" rel="stylesheet")
        link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous")
        script(src="https://code.getmdl.io/1.3.0/material.min.js")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
        script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous")
        script(src="/javascripts/profile.js")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
        script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.bundle.js")
    body

        .wrapper

            .header
                img.logo(src="../images/obEN_logo.png" height=31 width=62.5)
                a.header_statistic(href="/statistic") Statistic
                a.header_profile(href="/profile") Profile
                a.header_dashboard(href="/welcome") Dashboard
                a.header_logout(href="/logout") Logout

            .content
                .card
                    if(avatar)
                        img.avatar(src=avatar height=50 width=50)
                    else
                        img.avatar(src="../images/profile-picture.png" height=50 width=50)
                    .card_description
                        .field
                            p Name:&nbsp
                            p#card_name=fullName

                        .field
                            p Department:&nbsp
                            p#card_position=department

                        .field
                            p Position:&nbsp
                            p#card_team_position=position

                        .field
                            p Address:&nbsp
                            p#card_address(contenteditable)=address

                        .field
                            p Phone: &nbsp
                            p#card_telephone(contenteditable)=telephone
                        .field
                            p Email: &nbsp
                            p#card_email=email

                    a.change_password.fas.fa-envelope.fa-3x(href="/changeEmail")
                        p Change your email
                    a.change_password.fas.fa-key.fa-3x(href="/resetPassword")
                        p Change your password
                    a.change_profile_image.fas.fa-user-circle.fa-3x
                        p Change your profile image
form.submission_form(name = "submission" action="/changeAvatar", method="post", enctype='multipart/form-data' onsubmit="return checkForm();")
    fieldset.forms_fieldset
        .forms_field
            p Drag your pictures here or click in this area.
            input#forms_file.draginput(type='file', name='file', multiple='' required)
            p.error_message

    .forms_buttons
        button.forms_buttons-submit(type='submit', value='Submit') Submit
        br
        button.forms_buttons-cancel Cancel







