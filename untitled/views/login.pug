doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/login2.css')
        link(href="https://fonts.googleapis.com/css?family=PT+Serif|Poppins|Ubuntu" rel="stylesheet")
        link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
        link(rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css")
        script(src="https://code.getmdl.io/1.3.0/material.min.js")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
        script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous")
        script(src='/javascripts/login.js')
        script(src="https://cdn.rawgit.com/nnattawat/flip/master/dist/jquery.flip.min.js")


    body

        section.user
            .user_options-container
                #user_options-forms.user_options-forms.card
                    .user_forms-login.front
                        img.logo(src="../images/obEN_logo.png" height=61 width=115 align=middle)
                        br
                        h2.forms_title(align = middle) Login
                        form.forms_form
                            fieldset.forms_fieldset
                                .forms_field
                                    input.forms_field-input(type='username', name="username", placeholder='username', required='', autofocus='')
                                .forms_field
                                    input.forms_field-input(type='password', placeholder='Password', required='')
                            .forms_buttons
                                button.forms_buttons-forgot(type='button') Forgot password?
                                br
                                button.forms_button-flip(type='button') Do not have an account?
                                input.forms_buttons-action(type='submit', value='Log In')

                    .user_forms-signup.back
                        img.logo(src="../images/obEN_logo.png" height=61 width=115 align="middle")
                        br
                        h2.forms_title Sign Up
                        form.forms_form
                            fieldset.forms_fieldset
                                .forms_field
                                    input.forms_field-input(type='text', placeholder='Full Name', required='')
                                .forms_field
                                    input.forms_field-input(type='Employee ID', name="EmployeeID", placeholder='Employee ID', required='')
                                .forms_field
                                    input.forms_field-input(type='email', placeholder='Email', required='')
                                .forms_field
                                    input.forms_field-input(type='password', placeholder='Password', required='')
                            .forms_buttons
                                button.forms_button-flip-back(type='button') Already have an account?
                                input.forms_buttons-action(type='submit', value='Sign up')






