doctype html


html
    head
        title="Activation"

        link(rel='stylesheet', href='/stylesheets/login.css')
        link(href="https://fonts.googleapis.com/css?family=PT+Serif|Poppins|Ubuntu" rel="stylesheet")
        link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
        link(rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css")
        script(src="https://code.getmdl.io/1.3.0/material.min.js")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
        script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous")
        script(src='/javascripts/login.js')
        script(src="https://cdn.rawgit.com/nnattawat/flip/master/dist/jquery.flip.min.js")


        body

            section.user
                .user_options-container
                    #user_options-forms.user_options-forms.card
                        .user_forms-login.front
                            img.logo(src="../images/obEN_logo.png" height=61 width=115 align="middle")
                            br
                            h2.forms_title Activation
                            h5=employeeId
                            h5=userGroup
                            h5=departmentId
                            h5=fullName
                            form.forms_form(action="/activate" method="post")
                                fieldset.forms_fieldset
                                    .forms_field
                                        input(type="hidden", name="employeeId", value=employeeId, required='')
                                    .forms_field
                                        input.forms_field-input(type='email', name="email", placeholder='Email', required='')
                                    .forms_field
                                        input.forms_field-input(type='password', name="password", placeholder='Password', required='')
                                    .forms_field
                                        input.forms_field-input(type='checkbox', name="agreement", required='')
                                        | I agree to terms and conditions.
                                .forms_buttons
                                    input.forms_buttons-action(type='submit', value='Activate')
                                    if error
                                        p#error_message_signup= error.message


