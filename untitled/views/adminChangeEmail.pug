doctype html

html
    head
        title= "Change Email"
        link(rel='stylesheet', href='/stylesheets/profile.css')
        link(rel='stylesheet', href='/stylesheets/header.css')
        link(rel='stylesheet', href='/stylesheets/resetPassword.css')
        link(href="https://fonts.googleapis.com/css?family=PT+Serif|Poppins|Ubuntu" rel="stylesheet")
        link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous")
        script(src="https://code.getmdl.io/1.3.0/material.min.js")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
        script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous")
        script(src="https://cdn.rawgit.com/nnattawat/flip/master/dist/jquery.flip.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.bundle.js")


    body

        .wrapper

            .header
                img.logo(src="../images/obEN_logo.png" height=31 width=62.5)

            .content
                .card_description
                    .field
                        p Current email:&nbsp
                        p#card_name=email
                .card
                    form.forms_form(action="/admin/changeEmail" method="post")
                        fieldset.forms_fieldset
                            .forms_field
                                input.forms_field-input(type='email', name="newEmail", placeholder='New Email', required='')
                        .forms_buttons
                            input.forms_buttons-action(type='submit', value='Change Email')
                            if error
                                p.error=error.message


