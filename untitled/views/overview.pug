doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/main.css')
        link(rel='stylesheet', href='/stylesheets/resetPassword.css')
        link(href="https://fonts.googleapis.com/css?family=PT+Serif|Poppins|Ubuntu" rel="stylesheet")
        link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous")
        script(src="https://code.getmdl.io/1.3.0/material.min.js")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
        script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous")
        script(src='/javascripts/main.js')
        script(src="https://cdn.rawgit.com/nnattawat/flip/master/dist/jquery.flip.min.js")
    body

        .wrapper

            .header
                img.logo(src="../images/obEN_logo.png" height=31 width=62.5)
                a.header_statistic(href="/statistic") Statistic
                a.header_profile(href="/profile") Profile
                a.header_dashboard(href="/main") Dashboard
                a.header_logout(href="/logout") Logout

            .content
                .list_description
                    p.list_description-name Name
                    p.list_description-type Type
                    p.list_description-description Description
                .line
                ul#list
                    if list
                        each val in list
                            li.tile
                                p.name=val.fullName
                                select.user_filter_user(name="department" id="department" default=val.userGroup)
                                    option(value="1") Finanace
                                    option(value="2") Nature Language processing
                                    option(value="3") Machine Learning
                                select.user_filter_user(name="group" id="group" default=val.departmentId)
                                    option(value="1") Employee
                                    option(value="2") Team Manager
                                button.user_filter_button submit
                .fas.fa-upload.fa-2x#float_button
                form.submission_form(action="/admin/add-employee", method="post")
                    fieldset.forms_fieldset
                        .forms_field
                            p Name
                            input.forms_field-input(type='text', name="name", placeholder='Name', required='')
                        select.user_filter_user(name="department" id="department")
                            option(value="1") Finanace
                            option(value="2") Nature Language processing
                            option(value="3") Machine Learning
                        select.user_filter_user(name="group" id="group")
                            option(value="1") Employee
                            option(value="2") Team Manager
                        .forms_field
                            p Dispense
                            input.forms_field-input(type='money', name="dispense", placeholder='EmployeeID', required='')

                    .forms_buttons
                        input.forms_buttons-submit(type='submit', value='Submit')
                        br
                        button.forms_buttons-cancel cancel

                       