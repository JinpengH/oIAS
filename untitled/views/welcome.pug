
doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/welcome.css')
        link(rel='stylesheet', href='/stylesheets/header.css')
        link(href="https://fonts.googleapis.com/css?family=PT+Serif|Poppins|Ubuntu" rel="stylesheet")
        link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous")
        script(src="https://code.getmdl.io/1.3.0/material.min.js")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
        script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous")
        script(src='/javascripts/welcome.js')
        script(src="https://unpkg.com/popper.js@1/dist/umd/popper.min.js")
        script(src="https://unpkg.com/tippy.js@4")
        script(src="https://cdn.rawgit.com/nnattawat/flip/master/dist/jquery.flip.min.js")
    body

        .wrapper
            .header
                img.logo(src="../images/obEN_logo.png" height=31 width=62.5)
                a.header_dashboard(href="/welcome") Dashboard
                a.header_profile(href="/profile") Profile
                a.header_statistic(href="/statistic") Report
                a.header_logout(href="/logout") Logout
            .content
                .card.profile
                    p.title Profile
                    a(href = '/profile') (click here to edit your profile)
                    .line
                    p=name
                    p=position
                    p=telephone
                    p=postal
                    p=address
                if userGroup !== 3
                .card.my_request
                    p.title My Request
                    .line
                    p='Recently, ' + approved + ' quests have been proved'
                    p=declined + ' quests have been declined'
                    a(href='/main') Click to see details
                if userGroup !== 3
                .card.submit
                    p.title Submit a Request
                    .line
                    button#float_button Submit Request

                if userGroup >= 2
                    .card.other
                        p.title Other Request
                        .line
                        p="Recently, "+ 10 + " requests need to be reviewed"
                        a(href='/other') Click to see details
form.submission_form(name = "submission" action="/submission/create", method="post", enctype='multipart/form-data' onsubmit="return checkForm();")
    fieldset.forms_fieldset
        .forms_field
            p.list_title Invoice Request
        .forms_field
            input.forms_field-input(type='text', name="title", placeholder='Title', required='')
        .forms_field
            input.forms_field-input(type='text', name="type", placeholder='Type', required='')
        .forms_field
            input.forms_field-input(type='text', name="description", placeholder='Description', required='')
        .forms_field
            input.forms_field-input(type='money', name="dispense", placeholder='Dispense Amount', required='')
        .forms_field
            p Drag your files here or click in this area.
            input#forms_file.draginput(type='file', name='file', multiple='' required)
            p.error_message

    .forms_buttons
        button.forms_buttons-submit(type='submit', value='Submit') Submit
        br
        button.forms_buttons-cancel Cancel



